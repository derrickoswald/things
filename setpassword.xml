<project>

    <target name="clean">
        <delete file="password.properties"/>
        <delete file = "jsTestDriverModified.conf"/>
    </target>

    <target name="setpass">
        <property file="password.properties"/>
        <input addproperty="admin.password">
            The password.properties file was not found or
            it doesn't contain property admin.password,
            please enter the couchdb admin password:
        </input>
        <propertyfile file="password.properties">
            <entry  key="admin.password" value="${admin.password}" />
        </propertyfile>
        <copy file="jsTestDriver.conf" tofile="jsTestDriverModified.conf"/>
        <replace file="jsTestDriverModified.conf" token="secret" value="${admin.password}"/>
    </target>

</project>