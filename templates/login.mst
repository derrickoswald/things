<li id="create_user" class="dropdown">
    <a id="create_user_link" href="#" data-toggle="dropdown">New account</a>
    <div class="dropdown-menu loginform">
        <form id="create_user_form" action="#" role="form">
            <div class="form-group">
                <div class="input-group">
                    <label for="newuser">User name</label>
                    <input id="newuser" type="text" class="form-control" placeholder="User name" />
                </div>
                <div class="input-group">
                    <label for="password1">Password</label>
                    <input id="password1" type="password" class="form-control" placeholder="Password" />
                </div>
                <div class="input-group">
                    <label for="password2">Confirm password</label>
                    <input id="password2" type="password" class="form-control" placeholder="Password" />
                </div>
            </div>
            <button type="submit" class="btn btn-default">Create account</button>
        </form>
    </div>
</li>
<li id="login" class="dropdown">
    <a id="login_button_link" href="#" data-toggle="dropdown">Login</a>
    <div class="dropdown-menu loginform">
        <form id="login_form" action="#" role="form">
            <div class="form-group">
                <div class="input-group">
                    <label for="username">User name</label>
                    <input id="username" type="text" class="form-control" placeholder="User name" />
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" class="form-control" placeholder="Password" />
                </div>
            </div>
            <div class="form-group">
                <div>Insecure options</div>
                <div id='remember_me' class="input-group input-group-sm">
                    <label id="remember_label" for="remember">Remember me</label>
                    <input id="remember" type="checkbox" />
                </div>
                <div id='automatic_login' class="input-group input-group-sm">
                    <label id="autologin_label" for="autologin">Automatic login</label>
                    <input id="autologin" type="checkbox" />
                </div>
            </div>
            <button type="submit" class="btn btn-default">Sign in</button>
        </form>
    </div>
</li>
<li id="logout" class="hidden">
    <a id="logout_button_link" href="#">Logout <span id="loggedin_user"></span></a>
</li>